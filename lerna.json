{
    "version": "1.1.2",
    "packages": [
        "packages/*"
    ],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "conventionalCommits": true,
            "conventionalBlacklist": [
                "chore"
            ],
            "changelogPreset": "angular",
            "createRelease": "github",
            "commitHooks": false,
            "private": false,
            "ignoreChanges": [
                "*.md"
            ]
        },
        "version": {
            "conventionalCommits": true,
            "conventionalBlacklist": [
                "chore"
            ],
            "changelogPreset": "angular",
            "createRelease": "github",
            "commitHooks": false,
            "private": false,
            "ignoreChanges": [
                "*.md"
            ]
        },
        "bootstrap": {
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    }
}
